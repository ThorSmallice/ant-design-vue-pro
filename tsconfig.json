{
    // "$schema": "https://schemastore.azurewebsites.net/schemas/json/tsconfig.json",
    "compilerOptions": {
        "isolatedModules": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strict": true,
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "baseUrl": "./",
        "allowJs": false,
        "stripInternal": true,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "noImplicitAny": false,
        "noEmit": true,
        "types": ["vite/client", "node", "@vue-macros/reactivity-transform/macros-global"],

        "outDir": "./dist",
        "strictNullChecks": false,
        "verbatimModuleSyntax": false,
        "paths": {
            "@src/*": ["src/*"],
            "@comps/*": ["src/components/*"],
            "@config/*": ["src/config/*"],
            "@tools/*": ["src/tools/*"],
            "@examples/*": ["docs/examples/*"],
            "@docs/*": ["docs/*"],
            "antd-vue-dbthor": ["src/main.ts"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "*.d.ts",
        "docs/**/*.md",
        "docs/**/*.vue",
        "docs/**/*.ts",
        "docs/**/*.tsx"
    ],
    "exclude": ["node_modules"],
    "vueCompilerOptions": {
        "plugins": ["unplugin-vue-macros/volar"]
    }
}
